<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black_transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_first"
        android:padding="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/white_square"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_duplicate"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:gravity="center"
            android:text="Duplicate Entry"
            android:textSize="20sp"
            android:textColor="@color/colorseven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <View
                android:background="@color/view_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

        <TextView
            android:id="@+id/rollover"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:gravity="center"
            android:text="Rollover Entry"
            android:textSize="20sp"
            android:textColor="@color/colorseven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <View
                android:background="@color/view_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        <TextView
            android:id="@+id/txt_delete"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:gravity="center"
            android:text="Delete Entry"

            android:textSize="20sp"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/button_welcome"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/txt_cancel"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:gravity="center"
                android:text="Cancel"
                android:textSize="20sp"
                android:background="@drawable/white_square"
                android:textColor="@color/colorseven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>