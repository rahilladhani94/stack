<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/headertitle">
        <TextView
            android:padding="5dp"

            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/backicon"
            android:text="Account"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Notifications"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />



    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proximity"/>
            <ToggleButton
                android:id="@+id/tog_proxi"

                android:checked="true"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/toggle_button_background"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify me when a timer is running and i change locations."/>
        <View
            android:background="@color/view_color"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timer Reminder"/>
            <ToggleButton
                android:id="@+id/togg_timer_reminder"
                android:checked="true"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/toggle_button_background"
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_marginRight="5dp"
               android:layout_toLeftOf="@+id/ll_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remind me if a timer is running for longer than:"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
               android:id="@+id/ll_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">

                <EditText

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="15"
                    android:id="@+id/edt_longer"
                    android:textColor="@color/black"
                    android:padding="3dp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/grey_square"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="13sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:text="min"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:background="@color/view_color"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Over Allocation"/>
            <ToggleButton
                android:id="@+id/togg_over_allocation"

                android:checked="true"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/toggle_button_background"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify me when a running timer is over its entry's allocation."/>
        <View
            android:background="@color/view_color"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>
    </LinearLayout>
</LinearLayout>