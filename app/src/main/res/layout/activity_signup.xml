<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_mail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">


    <include layout="@layout/title_header">

    </include>


    <ScrollView
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/themetext"
            android:text="Signup to HourStack"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/txt_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@drawable/grey_square"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edt_name"
                android:textColor="@color/grey"
                android:textSize="14dp"
                android:padding="3dp"
                android:hint="Full Name"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:layout_marginTop="30dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <View
                android:background="@color/bottom_tab_bg"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <EditText
                android:id="@+id/edt_Email"

                android:inputType="textEmailAddress"
                android:textColor="@color/grey"
                android:textSize="14dp"
                android:padding="3dp"
                android:hint="Email Address"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:layout_marginTop="30dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <View
                android:background="@color/bottom_tab_bg"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <EditText
                android:id="@+id/edt_Password"
                android:textColor="@color/grey"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:padding="3dp"
                android:hint="Password"
                android:singleLine="true"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <View
                android:background="@color/bottom_tab_bg"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <EditText
                android:id="@+id/edt_companyname"
                android:textColor="@color/grey"
                android:textSize="14dp"
                android:padding="3dp"
                android:hint="Company Name"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:layout_marginTop="30dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_Signup"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Signup"
            android:layout_marginTop="20dp"
            android:background="@drawable/green_button"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/black_transparent"
                android:text="By creating an account you agree with our"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_terms"

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black_transparent"
                        android:text="Terms of Service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <View
                        android:visibility="gone"
                        android:background="@color/black_transparent"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></View>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/black_transparent"
                    android:text="and"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:id="@+id/ll_privacy"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black_transparent"
                        android:text="Privacy Policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <View
                        android:visibility="gone"
                        android:background="@color/black_transparent"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></View>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>


</LinearLayout>
